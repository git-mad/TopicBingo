<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- selected -->
    <item android:state_selected="true" android:color="@color/holo_green_dark" />

    <!-- checked -->
	<item android:state_checked="true" android:color="@color/holo_green_dark" />

	<!-- activated -->
	<item android:state_activated="true" android:color="@color/holo_green_dark" />

	<!-- pressed -->
	<item android:state_pressed="true" android:color="@color/holo_green_light" />

	<!-- focused -->
    <!-- <item android:state_focused="true" android:color="#ff0000ff" /> -->

	<!-- default -->
    <item android:color="@android:color/black" />

</selector>
